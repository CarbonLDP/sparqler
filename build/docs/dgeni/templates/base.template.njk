<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/png" href="/favicon.png">

    <title>{% block title %}Index{% endblock %} - SPARQLER API Docs</title>

    <!-- build:css -->
    <link rel="stylesheet" type="text/css" href="/styles/styles.css">
    <!-- endbuild -->
</head>
<body>

    <div class="ui top fixed inverted menu docs-menu-top">
        <a class="item" href="https://carbonldp.com">
            <img class="ui small image doc-logo" src="images/carbon-ldp-logo.png">
        </a>
        <div class="ui right aligned search item doc-search">
            <div class="ui icon input">
                <input class="prompt" placeholder="Search...">
                <i class="search icon"></i>
            </div>
            <div class="results"></div>
        </div>
    </div>

    <div class="docs-main-block">
        <div class="docs-main-block__menu docs-left-menu docs-left-menu--visible in-mobile">
            <div class="ui top attached inverted fluid vertical menu">
                <div class="ui item right aligned container">
                    <button class="ui inverted icon button js-sidebar-toggler">
                        <i class="sidebar icon"></i>
                    </button>
                </div>
            </div>
            <div class="ui bottom attached inverted fluid vertical menu docs-left-menu__items">
                {% for moduleDoc in doc.navigationDocs %}
                    <div class="item {{ ' active' if doc.id === moduleDoc.id or doc.moduleDoc.id === moduleDoc.id }}">
                        {% if doc.moduleDoc.name !== "index" %}<a class="header" href="/{{ moduleDoc.id }}">{{ moduleDoc.id }}</a>{% endif %}
                        <div class="menu">
                            {% for exported in moduleDoc.exports -%}
                                <a class="item{{ ' active' if doc.id === exported.id }}" href="/{{ exported.id }}">{{ exported.name }}</a>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="docs-main-block__content docs-left-menu__sibling">
            <div class="ui top attached menu docs-location-menu">
                <a class="item js-sidebar-toggler"><i class="large content icon"></i>Menu</a>
                <div class="left menu">
                    <a class="item{{ ' active' if doc.docType === 'index' }}" href="/">JS SDK Docs</a>
                    {% if doc.moduleDoc and doc.moduleDoc.name !== "index" %}<a class="item" href="/{{ doc.moduleDoc.id }}">{{ doc.moduleDoc.id }}</a>{% endif %}
                    {% if doc.name !== "index" %}<a class="item active" href="/{{ doc.id }}">{{ doc.id if doc.docType === "module" else doc.name }}</a>{% endif %}
                </div>
            </div>
            <div class="ui fluid container main-container">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    <!-- build:js -->
    <script src="/scripts/bundle.js"></script>
    <!-- endbuild -->
</body>
</html>